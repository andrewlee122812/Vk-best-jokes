<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/avatar_image_view"
        android:layout_alignParentLeft="true"
        android:src="@drawable/like_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_text_view"
        android:text="user name"
        android:layout_alignLeft="@+id/comment_text_view"
        android:layout_alignStart="@+id/comment_text_view"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_text_view"
        android:textColorLink="@color/colorPrimary"
        android:clickable="true"
        android:text="очень длинный текст коммента очень длинный текст коммента очень длинный текст коммента очень длинный текст коммента очень длинный текст коммента очень длинный текст коммента очень длинный текст коммента очень длинный текст коммента "
        android:layout_below="@+id/avatar_image_view"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="-20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_text_view"
        android:text="date text"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/comment_text_view"
        android:layout_alignParentRight="true" />

</RelativeLayout>